<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Tags</title>
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
    <main class="max-w-6xl mx-auto">
        <h1 class="text-2xl font-bold mb-4 text-center">Categories</h1>
        <section class="flex flex-wrap -mx-3">
            <% categories.data.forEach(function(category) { %>
                <!-- Card 1 -->
                <article class="w-full md:w-1/2 lg:w-1/3 px-3 mb-6">
                    <div class="bg-white shadow-md rounded-2xl p-6 hover:shadow-lg transition duration-300">
                        <h2 class="text-xl font-semibold text-emerald-700 mb-2">Card Title</h2>
                        <p class="text-emerald-900 text-sm">
                            <%= category %>
                        </p>
                    </div>
                </article>
            <% }); %>
        </section>
    </main>
</body>

</html>